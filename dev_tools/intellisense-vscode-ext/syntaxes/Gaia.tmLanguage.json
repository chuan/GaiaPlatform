{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Gaia Platform",
	"patterns": [
		{
			"include": "#comments"
		},
		{
			"include": "#control-keywords"
		},
		{
			"include": "#other-keywords"
		},
		{
			"include": "#support"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#numbers"
		}
	],
	"repository": {
		"comments": {
			"patterns": [
				{
					"begin": "#\\!",
					"beginCaptures": {
						"0": {
							"name": "punctuation.definition.comment.gaia"
						}
					},
					"end": "\\n",
					"name": "comment.line.number-sign.gaia"
				},
				{
					"captures": {
						"0": {
							"name": "punctuation.definition.comment.gaia"
						}
					},
					"match": "/\\*\\*/",
					"name": "comment.block.empty.gaia"
				},
				{
					"include": "#comments-inline"
				}
			]
		},
		"comments-inline": {
			"patterns": [
				{
					"begin": "/\\*",
					"captures": {
						"0": {
							"name": "punctuation.definition.comment.gaia"
						}
					},
					"end": "\\*/",
					"name": "comment.block.gaia"
				},
				{
					"begin": "(^[ \\t]+)?(?=//)",
					"beginCaptures": {
						"1": {
							"name": "punctuation.whitespace.comment.leading.gaia"
						}
					},
					"end": "(?!\\G)",
					"patterns": [
						{
							"begin": "//",
							"beginCaptures": {
								"0": {
									"name": "punctuation.definition.comment.gaia"
								}
							},
							"end": "\\n",
							"name": "comment.line.double-slash.gaia"
						},
						{
							"begin": "--?|\\s",
							"beginCaptures": {
								"0": {
									"name": "punctuation.definition.comment.gaia"
								}
							},
							"end": "\\n",
							"name": "comment.line.double-dash.gaia"
						}
					]
				}
			]
		},
		"control-keywords": {
			"patterns": [
				{
					"name": "keyword.control.gaia",
					"match": "\\b(if|while|for|return|switch|case|break|else)\\b"
				},
				{
					"name": "keyword.control.gaia",
					"match": "\\busing ([a-zA-Z0-9_.-]*) ([a-zA-Z0-9_.-]*)\\b",
					"captures": {
						"1": {
							"name": "storage.type.class.gaia"
						},
						"2": {
							"name": "support.class.gaia"
						}
					}
				},
				{
					"name": "keyword.control.gaia",
					"match": "#\\binclude ([a-zA-Z0-9_.-<>]*)",
					"captures": {
						"1": {
							"name": "string.quoted.double.gaia"
						}
					}
				}
			]
		},
		"other-keywords": {
			"patterns": [
				{
					"name": "keyword.other.gaia",
					"match": "\\bruleset ([a-zA-Z0-9_.-]*)\\b",
					"captures": {
						"1": {
							"name": "support.class.gaia"
						}
					}
				}
			]
		},
		"support": {
			"patterns": [
				{
					"name": "support.function.gaia",
					"match": "\\bOn([a-zA-Z_.-]*)\\b"
				}
			]
		},
		"strings": {
			"name": "string.quoted.double.gaia",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.gaia",
					"match": "\\\\."
				}
			]
		},
		"numbers": {
			"patterns": [
				{
					"name": "keyword.other.unit.suffix.integer.gaia",
					"match": "(^[0-9][0-9\\.]*$)"
				},
				{
					"name": "keyword.other.unit.suffix.integer.gaia",
					"match": "([0-9][0-9\\.]+)"
				}
			]
		}
	},
	"scopeName": "source.gaia"
}